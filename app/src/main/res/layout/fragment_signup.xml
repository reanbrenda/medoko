<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Register with us if you are new.\nHelp others getting an ambulance to the hospital.\nLet Humanity Win !!"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/user"
                android:layout_width="120dp"
                android:checked="true"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:text="User"/>

            <RadioButton
                android:id="@+id/driver"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:text="Driver"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <EditText
                android:id="@+id/iname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="NAME"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColorHint="#616161"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_phone_black_24dp" />


            <EditText
                android:id="@+id/iphone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="PHONE NUMBER"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="#616161"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_email_black_24dp" />

            <EditText
                android:id="@+id/iemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="EMAIL"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColorHint="#616161"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_lock_black_24dp" />

            <EditText
                android:id="@+id/ipassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="#616161"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_password_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="17dp"
            android:buttonTint="@color/colorPrimary"
            android:text="  Show Password" />

        <ProgressBar
            android:id="@+id/progressBar_signup"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:focusable="false"
            android:indeterminate="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:theme="@style/LinearProgress"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/bg_1"/>

    </LinearLayout>

</RelativeLayout>